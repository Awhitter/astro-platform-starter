---
import { Image } from 'astro:assets';
import heroImage from '../assets/hero-image.jpg';
---

<section class="relative min-h-screen flex items-center justify-center text-white overflow-hidden">
    <div class="absolute inset-0 z-0">
        <Image src={heroImage} alt="Hero background" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-gray-900 opacity-70"></div>
    </div>
    <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-4 animate-fade-in">
            Hi, I'm <span class="text-blue-400">Your Name</span>
        </h1>
        <p class="text-xl sm:text-2xl mb-8 max-w-3xl mx-auto animate-fade-in animation-delay-200">
            A passionate web developer crafting beautiful and functional digital experiences
        </p>
        <div class="flex justify-center space-x-4 animate-fade-in animation-delay-400">
            <a href="#projects" class="bg-blue-500 text-white px-6 py-3 rounded-full text-lg font-semibold hover:bg-blue-600 transition-colors">
                View My Work
            </a>
            <a href="#contact" class="bg-transparent border-2 border-white text-white px-6 py-3 rounded-full text-lg font-semibold hover:bg-white hover:text-gray-900 transition-colors">
                Get in Touch
            </a>
        </div>
    </div>
</section>

<style>
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in {
        animation: fadeIn 0.6s ease-out forwards;
    }
    .animation-delay-200 {
        animation-delay: 0.2s;
    }
    .animation-delay-400 {
        animation-delay: 0.4s;
    }
</style>
