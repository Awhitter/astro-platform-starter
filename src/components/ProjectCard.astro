---
interface Props {
    title: string;
    description: string;
    image: string;
}

const { title, description, image } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <img src={image} alt={title} class="w-full h-48 object-cover" />
    <div class="p-6">
        <h3 class="text-xl font-semibold mb-2">{title}</h3>
        <p class="text-gray-600">{description}</p>
        <a href={`/projects/${title.toLowerCase().replace(/\s+/g, '-')}`} class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors">
            Learn More
        </a>
    </div>
</div>
