---
import ProjectCard from './ProjectCard.astro';

const projects = [
    { title: 'Project 1', description: 'Description for Project 1', image: '/assets/images/project-thumbnails/project1.jpg' },
    { title: 'Project 2', description: 'Description for Project 2', image: '/assets/images/project-thumbnails/project2.jpg' },
    { title: 'Project 3', description: 'Description for Project 3', image: '/assets/images/project-thumbnails/project3.jpg' },
];
---

<section id="projects" class="py-16 bg-gray-100">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold mb-8 text-center">Featured Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map((project) => (
                <ProjectCard {...project} />
            ))}
        </div>
    </div>
</section>
